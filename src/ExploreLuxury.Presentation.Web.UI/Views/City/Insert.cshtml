@using ExploreLuxury.Business.Domain.Entities
@model ExploreLuxury.Presentation.ModelView.CityCountries

@{
    ViewBag.Title = "Insert";
}

<h2>Insert</h2>

@using (Html.BeginForm("Insert", "City", FormMethod.Post, new { @class = "", role = "form" }))
{
    @Html.ValidationSummary()

    @Html.HiddenFor(x => x.City.Id)

    <div class="form-group">
        @Html.LabelFor(x => x.City.Name, "City")
        @Html.TextAreaFor(x => x.City.Name, new { @class = "form-control", placeholder = "enter name" })
    </div>

    <div class="form-group">
        @Html.LabelFor(x => x.City.Name, "Country")
        @Html.DropDownListFor(x => x.City.CountryId, new SelectList(Model.Countries, "Id", "Name"), new { @class = "form-control", placeholder = "enter name" })
    </div>


    <button type="submit" class="btn btn-default">Submit</button>
}