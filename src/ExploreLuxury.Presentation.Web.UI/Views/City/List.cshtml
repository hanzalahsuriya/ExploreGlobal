@model IEnumerable<ExploreLuxury.Business.Domain.Entities.City>



@{
    ViewBag.Title = "List";
}

<h2>List of hotels</h2>
<p>
    @Html.ActionLink("Insert City", "Insert", "City", null, new { @class = "btn btn-success" })
</p>
@{
    <div class="table-responsive">
        <table class="table table-striped table-hover">
            <thead>
                <tr><td>Name</td><td>Country</td>
            </thead>
            <tbody>
                @foreach (var obj in Model)
                {                    
                    <tr>
                        <td>@obj.Name</td>
                        <td>@obj.Country.Name</td>                      
                    </tr>
                } 
            </tbody>
        </table>
    </div>
   
}