@model IEnumerable<ExploreLuxury.Business.Domain.Entities.Country>



@{
    ViewBag.Title = "List";
}

<h2>List of hotels</h2>
<p>
    @Html.ActionLink("Insert Country", "Insert", "Country", null, new { @class = "btn btn-success" })
</p>
@{
    <div class="table-responsive">
        <table class="table table-striped table-hover">
            <thead>
                <tr><td>Name</td>
            </thead>
            <tbody>
                @foreach (var country in Model)
                {
                    <tr>
                        <td>@country.Name</td>             
                    </tr>
                } 
            </tbody>
        </table>
    </div>
   
}