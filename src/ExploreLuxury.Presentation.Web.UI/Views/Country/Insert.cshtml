@model ExploreLuxury.Business.Domain.Entities.Country

@{
    ViewBag.Title = "Insert";
}

<h2>Insert</h2>

@using (Html.BeginForm("Insert", "Country", FormMethod.Post, new { @class = "", role = "form" }))
{
    @Html.HiddenFor(x => x.Id)

    <div class="form-group">
        @Html.LabelFor(x => x.Name, "Country")
        @Html.TextAreaFor(x => x.Name, new { @class = "form-control", placeholder = "enter name" })
    </div>

    <button type="submit" class="btn btn-default">Submit</button>
}