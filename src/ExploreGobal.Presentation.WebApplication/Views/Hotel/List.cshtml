@model IEnumerable<ExploreGobal.Business.Domain.Entities.Hotel>



@{
    ViewBag.Title = "List";
}

<h2>List of hotels</h2>

@{
    <div class="table-responsive">
        <table class="table table-striped table-hover">
            <thead>
                <tr><td>Name</td><td>Description</td><td>Actions</td></tr>
            </thead>
            <tbody>
                @foreach (var hotel in Model)
                {
                    <tr>
                        <td>@hotel.Name</td>
                        <td>@hotel.ShortDescription</td>
                        <td>
                            @Html.ActionLink("Edit", "Edit", new { hotelId = hotel.Id.ToString() })
                        </td>
                    </tr>
                } 
            </tbody>
        </table>
    </div>
   
}